/**app.wxss**/

/* 全局滚动区域 */
.scrollarea {
  height: 100vh;
  width: 100%;
}

/* 全局字体 */
page {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', 'Helvetica Neue', Helvetica, Arial, sans-serif;
  -webkit-font-smoothing: antialiased;
}

/* 全局按钮样式重置 */
button {
  margin: 0;
  padding: 0;
  background: none;
  line-height: normal;
}

button::after {
  border: none;
}
