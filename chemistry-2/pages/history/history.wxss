.container {
  padding: 20px;
  display: flex;
  flex-direction: column;
  background-color: #f7f9fc; /* 浅色背景 */
  min-height: 100vh;
}

.title {
  margin-bottom: 30px;
  text-align: center;
}

.title-text {
  font-size: 28px;
  font-weight: bold;
  color: #333;
  text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.2);
}

.card {
  background-color: white;
  padding: 20px;
  margin-bottom: 20px;
  border-radius: 15px;
  box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
}

.label {
  font-size: 18px;
  font-weight: 500;
  color: #666;
  margin-bottom: 10px;
  display: block; /* 确保每个label元素独占一行 */
}

.value {
  font-size: 18px;
  color: #333;
  font-weight: bold;
}

.button {
  font-size: 18px;
  padding: 10px 20px;
  background: linear-gradient(135deg, #667eea, #764ba2); /* 蓝紫色渐变 */
  color: white;
  border: none;
  border-radius: 25px;
  box-shadow: 0 5px 10px rgba(0, 0, 0, 0.3);
  transition: transform 0.2s;
}

.button:active {
  transform: scale(0.95);
}

.image-preview {
  max-width: 100%;
  height: auto;
  border-radius: 10px;
  box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
}

.record {
  margin-bottom: 20px;
}
