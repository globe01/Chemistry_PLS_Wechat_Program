/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.title {
  text-align: center;
  margin-bottom: 20px;
}

.title-text {
  font-size: 24px;
  font-weight: bold;
}

.section {
  display: flex;
  align-items: center;
  margin-bottom: 20px;
  padding: 0 20px;
}

.label {
  font-size: 18px;
  width: 120px;
}

.button {
  margin-left: 10px;
}

.image-preview {
  margin-top: 10px;
  max-width: 100%;
  height: auto;
}

.value {
  font-size: 18px;
  margin-left: 10px;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  width: 80%;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.avatar-wrapper {
  padding: 0;
  width: 56px !important;
  border-radius: 8px;
  margin-top: 40px;
  margin-bottom: 40px;
}

.avatar {
  display: block;
  width: 56px;
  height: 56px;
}

.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  color: black;
}

.nickname-label {
  width: 105px;
}

.nickname-input {
  flex: 1;
}