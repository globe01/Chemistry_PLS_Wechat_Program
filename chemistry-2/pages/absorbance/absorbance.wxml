<scroll-view class="scrollarea" scroll-y type="list">
  <view class="container">
    <view class="title">
      <text class="title-text">吸光度的预测</text>
    </view>
    <view class="section">
      <text class="label">图片：</text>
      <button class="button" bindtap="chooseImage">拍照/选择图片</button>
    </view>
    <view class="section" wx:if="{{imagePath}}">
      <image class="image-preview" src="{{imagePath}}" mode="widthFix"></image>
    </view>
    <view class="section">
      <text class="label">RGB值：</text>
      <text class="value">{{rgbValues}}</text>
    </view>
    <view class="section">
      <text class="label">预测吸光度：</text>
      <text class="value">{{absorbance}}</text>
    </view>
  </view>
</scroll-view>
