/* 容器 */
.container {
  padding: 28rpx;
  min-height: 100vh;
  background: linear-gradient(180deg, #f0f4f8 0%, #e2e8f0 100%);
}

/* 标题区域 */
.header {
  text-align: center;
  padding: 48rpx 0 56rpx;
}

.logo {
  width: 72rpx;
  height: 72rpx;
  margin: 0 auto 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.35);
}

.logo-inner {
  width: 32rpx;
  height: 32rpx;
  border: 4rpx solid rgba(255,255,255,0.9);
  border-radius: 50%;
}

.title {
  display: block;
  font-size: 52rpx;
  font-weight: 700;
  color: #1a202c;
  letter-spacing: 2rpx;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.08);
  margin-bottom: 12rpx;
}

.subtitle {
  font-size: 24rpx;
  color: #718096;
  letter-spacing: 4rpx;
}

/* 通用卡片 */
.card {
  background: #ffffff;
  border-radius: 28rpx;
  margin-bottom: 28rpx;
  box-shadow: 0 2rpx 16rpx rgba(0,0,0,0.04), 0 8rpx 32rpx rgba(0,0,0,0.04);
  overflow: hidden;
}

/* 图片卡片 */
.image-card {
  min-height: 380rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.image-card:active {
  transform: scale(0.985);
}

.image-card.has-image {
  border-color: rgba(102, 126, 234, 0.15);
}

/* 上传区域 */
.upload-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 56rpx 40rpx;
}

.upload-icon-wrapper {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, rgba(102,126,234,0.08) 0%, rgba(118,75,162,0.08) 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 28rpx;
}

.upload-icon {
  width: 56rpx;
  height: 56rpx;
  position: relative;
}

.icon-line-h, .icon-line-v {
  position: absolute;
  background: linear-gradient(135deg, #667eea, #764ba2);
  border-radius: 4rpx;
}

.icon-line-h {
  width: 100%;
  height: 6rpx;
  top: 50%;
  transform: translateY(-50%);
}

.icon-line-v {
  width: 6rpx;
  height: 100%;
  left: 50%;
  transform: translateX(-50%);
}

.upload-text {
  font-size: 32rpx;
  color: #2d3748;
  font-weight: 600;
  margin-bottom: 10rpx;
}

.upload-hint {
  font-size: 24rpx;
  color: #a0aec0;
}

/* 加载区域 */
.loading-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 56rpx;
}

.spinner-wrapper {
  width: 72rpx;
  height: 72rpx;
  margin-bottom: 24rpx;
}

.spinner {
  width: 100%;
  height: 100%;
  border: 4rpx solid #e2e8f0;
  border-top-color: #667eea;
  border-right-color: #764ba2;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #4a5568;
  font-weight: 500;
  margin-bottom: 16rpx;
}

.loading-dots {
  display: flex;
  gap: 8rpx;
}

.dot {
  width: 8rpx;
  height: 8rpx;
  background: #667eea;
  border-radius: 50%;
  animation: bounce 1.2s ease-in-out infinite;
}

.dot:nth-child(2) { animation-delay: 0.2s; }
.dot:nth-child(3) { animation-delay: 0.4s; }

@keyframes bounce {
  0%, 60%, 100% { transform: translateY(0); opacity: 0.4; }
  30% { transform: translateY(-8rpx); opacity: 1; }
}

/* 图片展示 */
.image-display {
  width: 100%;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.image-grid {
  display: flex;
  gap: 20rpx;
  width: 100%;
}

.image-item {
  flex: 1;
  position: relative;
  border-radius: 20rpx;
  overflow: hidden;
  background: #f7fafc;
}

.preview-img {
  width: 100%;
  height: 260rpx;
  display: block;
}

.image-tag {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  font-size: 22rpx;
  color: #fff;
  background: linear-gradient(transparent, rgba(0,0,0,0.6));
  padding: 24rpx 16rpx 12rpx;
  text-align: center;
}

.image-tag.highlight {
  background: linear-gradient(transparent, rgba(102,126,234,0.85));
}

.tap-hint-btn {
  display: inline-block;
  text-align: center;
  font-size: 24rpx;
  color: #667eea;
  margin-top: 20rpx;
  padding: 12rpx 32rpx;
  background: rgba(102, 126, 234, 0.1);
  border: 2rpx solid rgba(102, 126, 234, 0.3);
  border-radius: 32rpx;
}

.tap-hint-btn:active {
  background: rgba(102, 126, 234, 0.2);
}

/* 结果卡片 */
.result-card {
  padding: 32rpx;
  background: linear-gradient(135deg, #ffffff 0%, #f8faff 100%);
}

.result-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.result-icon {
  width: 8rpx;
  height: 32rpx;
  background: linear-gradient(180deg, #667eea, #764ba2);
  border-radius: 4rpx;
  margin-right: 16rpx;
}

.result-label {
  flex: 1;
  font-size: 28rpx;
  color: #4a5568;
  font-weight: 500;
}

.type-tag {
  font-size: 22rpx;
  padding: 10rpx 20rpx;
  border-radius: 24rpx;
  color: #fff;
  font-weight: 500;
}

.type-tag.blue {
  background: linear-gradient(135deg, #4299e1, #3182ce);
  box-shadow: 0 4rpx 12rpx rgba(66,153,225,0.35);
}

.type-tag.orange {
  background: linear-gradient(135deg, #ed8936, #dd6b20);
  box-shadow: 0 4rpx 12rpx rgba(237,137,54,0.35);
}

.result-body {
  background: linear-gradient(135deg, rgba(102,126,234,0.06) 0%, rgba(118,75,162,0.06) 100%);
  border-radius: 20rpx;
  padding: 28rpx;
  text-align: center;
}

.result-value {
  font-size: 56rpx;
  font-weight: 700;
  background: linear-gradient(135deg, #667eea, #764ba2);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

/* 额外结果显示 */
.result-extra {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
  padding: 20rpx 24rpx;
  background: rgba(102, 126, 234, 0.04);
  border-radius: 16rpx;
  border: 2rpx dashed rgba(102, 126, 234, 0.2);
}

.extra-label {
  font-size: 26rpx;
  color: #718096;
}

.extra-value {
  font-size: 32rpx;
  font-weight: 600;
  color: #667eea;
}

/* RGB 卡片 */
.rgb-card {
  padding: 32rpx;
}

.rgb-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 28rpx;
}

.section-title {
  font-size: 28rpx;
  color: #4a5568;
  font-weight: 500;
}

.color-swatch {
  width: 48rpx;
  height: 48rpx;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.15), inset 0 0 0 2rpx rgba(255,255,255,0.5);
}

.rgb-bars {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.rgb-row {
  display: flex;
  align-items: center;
}

.rgb-label-box {
  width: 44rpx;
  height: 44rpx;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
  font-weight: 600;
  color: #fff;
  margin-right: 20rpx;
}

.rgb-label-r { background: linear-gradient(135deg, #fc8181, #f56565); }
.rgb-label-g { background: linear-gradient(135deg, #68d391, #48bb78); }
.rgb-label-b { background: linear-gradient(135deg, #63b3ed, #4299e1); }

.bar-track {
  flex: 1;
  height: 24rpx;
  background: #edf2f7;
  border-radius: 12rpx;
  overflow: hidden;
}

.bar-fill {
  height: 100%;
  border-radius: 12rpx;
  transition: width 0.5s ease;
}

.bar-r { background: linear-gradient(90deg, #fc8181, #f56565); }
.bar-g { background: linear-gradient(90deg, #68d391, #48bb78); }
.bar-b { background: linear-gradient(90deg, #63b3ed, #4299e1); }

.rgb-num {
  width: 72rpx;
  font-size: 26rpx;
  color: #4a5568;
  text-align: right;
  font-weight: 500;
  font-family: 'SF Mono', monospace;
}

/* 底部提示 */
.footer {
  padding: 36rpx;
  text-align: center;
}

.footer text {
  font-size: 22rpx;
  color: #a0aec0;
}
